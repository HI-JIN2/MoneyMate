<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ui.main.fixed.StockFragment">

    <LinearLayout
        android:id="@+id/text_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/mypage_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:text="한 곳에서 증권 연결을 확인할 수 있어요"
        android:textColor="@color/black"
        android:textSize="15dp">
    </TextView>

    <LinearLayout
        android:id="@+id/mypage_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:background="@drawable/rectangle_background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/btn_nh_bank"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:foregroundGravity="bottom"
                android:background="@color/white"
                android:src="@drawable/ic_kb_bank"
                android:scaleType="fitCenter"
                tools:ignore="MissingConstraints"
                android:layout_weight="1.5">
            </ImageButton>

            <TextView
                android:id="@+id/text_kbbank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:text="KB 국민은행"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="7">
            </TextView>

            <CheckBox
                android:id="@+id/check1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:background="@drawable/ic_non_check"
                android:layout_weight="1.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/btn_review_close"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:foregroundGravity="bottom"
                android:background="@color/white"
                android:src="@drawable/ic_nh_bank"
                android:scaleType="fitCenter"
                tools:ignore="MissingConstraints"
                android:layout_weight="1.5">
            </ImageButton>

            <TextView
                android:id="@+id/text_nhbank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:text="NH 농협은행"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="7">
            </TextView>

            <CheckBox
                android:id="@+id/check2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:background="@drawable/ic_non_check"
                android:layout_weight="1.5"/>
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_btn"
                android:text="증권 연결하기" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>