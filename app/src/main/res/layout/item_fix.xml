<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_rv_fix"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="?android:colorBackground"
    android:paddingHorizontal="31dp">

    <TextView
        android:id="@+id/fix_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{data.title}"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="적금" />

    <ImageView
        android:id="@+id/iv_goal_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_gray500_fill_20_rect"
        android:contentDescription="리사이클러뷰"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fix_category" />

    <TextView
        android:id="@+id/tv_every_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_goal_background"
        app:layout_constraintStart_toStartOf="@id/iv_goal_background"
        app:layout_constraintTop_toTopOf="@id/iv_goal_background"
        tools:text="매 월" />

    <TextView
        android:id="@+id/tv_fix_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="20dp"
        android:text="@{data.title}"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/iv_goal_background"
        app:layout_constraintStart_toEndOf="@id/tv_every_month"
        app:layout_constraintTop_toTopOf="@id/iv_goal_background"
        tools:text="200,000" />

    <TextView
        android:id="@+id/tv_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="20dp"
        android:text="@{data.title}"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_goal_background"
        app:layout_constraintStart_toEndOf="@id/tv_fix_content"
        app:layout_constraintTop_toTopOf="@id/iv_goal_background"
        tools:text="원" />

</androidx.constraintlayout.widget.ConstraintLayout>